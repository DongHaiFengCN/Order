<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zm.order.view.DiscountActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp"
        android:background="@color/paycolor"
        android:id="@+id/appBarLayout"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"

            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/textColor"
                android:text="@string/title_activity_discount"
                android:textSize="16sp" />
        </android.support.v7.widget.Toolbar>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="￥"
        android:typeface="sans"
        android:textSize="28sp"
        android:textColor="@color/md_white"
        android:gravity="center|right"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        />
    <TextView
        android:id="@+id/total_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="80.00"
        android:typeface="sans"
        android:textSize="28sp"
        android:textColor="@color/md_white"
        android:gravity="center|left"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:layout_marginRight="56dp"
        />
</LinearLayout>



    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:padding="8sp"
            android:text="选择减免单位"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_white"
            android:orientation="horizontal"
            android:padding="@dimen/radiobutton"

            >

            <RadioButton
                android:id="@+id/unit_ten"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:text="十元" />

            <RadioButton
                android:id="@+id/unit_element"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_weight="1"
                android:text="元" />

            <RadioButton
                android:id="@+id/unit_horn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:text="角" />

        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:padding="8sp"
            android:text="自定义减免金额"
            android:textSize="14sp" />

            <EditText
                android:id="@+id/discount_et"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/md_white"
                android:textColor="@color/md_black_1000"
                android:gravity="center"
                android:inputType="number"
                />



    </LinearLayout>
    <Button
        android:id="@+id/submit_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/background_discount_select"
        android:textColor="@color/md_white"
        android:text="确认"
        />
</LinearLayout>
