<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000"
    android:gravity="center"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/custom_dc_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="请输入您要编辑的菜名和价格"
            android:textSize="22sp"
            android:textColor="@color/md_white_1000"
            android:gravity="center_vertical"
            android:paddingLeft="20sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/md_white_1000">

        <TextView
            android:id="@+id/custom_dc_text"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:paddingLeft="20sp"
            android:text="菜名："
            android:textColor="@color/md_black_1000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/custom_dc_c"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="50sp"
            android:background="@drawable/animselect"
            android:ems="10"
            android:imeOptions="flagNoExtractUi"
            android:inputType="text"
            android:textColor="@color/md_black_1000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/custom_dc_lin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/md_white_1000" >

        <TextView
            android:id="@+id/custom_dc_tv"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@null"
            android:text="价格："
            android:textColor="@color/md_black_1000"
            android:paddingLeft="20sp"
            android:textSize="18sp"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/custom_dc_t"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="50sp"
            android:background="@drawable/animselect"
            android:ems="10"
            android:textColor="@color/md_black_1000"
            android:imeOptions="flagNoExtractUi"
            android:inputType="number" />

    </LinearLayout>
    <View
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/custom_dc_qx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="取消"
            android:textColor="@color/md_black_1000"
            android:textSize="18sp" />
        <View
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:background="@color/line"/>

        <Button
            android:id="@+id/custom_dc_qd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="确定"
            android:textColor="@color/md_black_1000"
            android:textSize="18sp" />


    </LinearLayout>

</LinearLayout>