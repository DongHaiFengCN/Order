<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp"
        android:background="@color/paycolor"
        android:id="@+id/appBarLayout"
       >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"

            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/textColor"
                android:text="@string/title_activity_pay"
                android:textSize="16sp" />
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="桌/牌：大厅一号"
                android:textSize="12sp"
                android:typeface="monospace"
                android:gravity="bottom|left"
                android:textColor="@color/md_white"
                android:paddingLeft="16dp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="消费金额：￥"
                    android:typeface="sans"
                    android:textSize="28sp"
                    android:textColor="@color/md_white"
                    android:gravity="center"
                    android:layout_marginLeft="16dp"
                    />

                <TextView
                    android:id="@+id/total_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="80.00"
                    android:typeface="sans"
                    android:textSize="28sp"
                    android:textColor="@color/md_white"
                    android:gravity="center"
                    />
            </LinearLayout>

        </LinearLayout>




    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:id="@+id/associator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/viewhight"
        android:background="@drawable/background_pay_select"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:paddingLeft="16dp"
            android:text="会员特惠"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/associator_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:paddingRight="16dp"
            android:textColor="@color/grey_color1"
            android:textSize="16sp"
            android:typeface="serif" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:src="@mipmap/forward" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:src="@drawable/divider">

    </ImageView>
    <LinearLayout
        android:id="@+id/discount"
        android:background="@drawable/background_pay_select"
        android:layout_width="match_parent"
        android:layout_height="@dimen/viewhight"
        android:orientation="horizontal"
        android:clickable="true"
        >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:typeface="monospace"
            android:paddingLeft="16dp"
            android:text="账单减免" />

        <TextView
            android:id="@+id/discount_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:typeface="serif"
            android:textSize="16sp"
            android:paddingRight="16dp"
            android:textColor="@color/grey_color1"
            />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/forward"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:src="@drawable/divider">

    </ImageView>
    <LinearLayout
        android:id="@+id/action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/viewhight"
        android:background="@drawable/background_pay_select"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:paddingLeft="16dp"
            android:text="活动"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/action_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:paddingRight="16dp"
            android:textColor="@color/grey_color1"
            android:textSize="16sp"
            android:typeface="serif" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:src="@mipmap/forward" />

    </LinearLayout>

    <LinearLayout

        android:background="@color/md_white_1000"
        android:layout_width="match_parent"
        android:layout_below="@+id/linearLayout6"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:paddingLeft="16dp"
            android:text="支付方式"
           />

        <TextView
            android:typeface="monospace"
            android:id="@+id/fact_tv"
            android:paddingRight="16dp"
            android:gravity="right|center"
            android:textColor="@color/md_red_500"
            android:textSize="18sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:src="@drawable/divider">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/md_white"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/ivalipay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_alipay"
            android:padding="16dp"
            android:background="@drawable/background_pay_select"
            />

        <ImageView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:src="@drawable/divider"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            />

        <ImageView
            android:id="@+id/ivwechat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:padding="16dp"
            android:src="@mipmap/icon_wx"
            android:layout_height="match_parent"
            android:background="@drawable/background_pay_select"
            />

        <ImageView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:src="@drawable/divider"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            />

        <ImageView
            android:id="@+id/cash"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:padding="16dp"
            android:src="@mipmap/icon_rmb"
            android:layout_height="match_parent"
            android:background="@drawable/background_pay_select"
            />



    </LinearLayout>




</LinearLayout>
