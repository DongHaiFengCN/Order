<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/seek_rel"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:src="@drawable/animback"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="搜索"
            android:textSize="26sp"
            android:gravity="center_vertical"
            android:textColor="@color/md_white"

            />


    </RelativeLayout>

    <ListView
        android:layout_below="@+id/seek_rel"
        android:id="@+id/activity_seek_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/activity_seek_edit"
        />


    <EditText
        android:id="@+id/activity_seek_edit"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:background="@null"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textSize="22sp"
        />



    <TableLayout
        android:layout_below="@+id/activity_seek_edit"
        android:id="@+id/tl_key_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_above="@+id/linearLayout3"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ibtn_key_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/style_public_1"
                android:background="@drawable/bg_key_selector"
                android:src="@mipmap/icon_key_1"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ibtn_key_2"
                style="@style/style_public_1"
                android:background="@drawable/bg_key_selector"
                android:src="@mipmap/icon_key_2" />

            <ImageView
                android:id="@+id/ibtn_key_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/style_public_1"
                android:background="@drawable/bg_key_selector"
                android:src="@mipmap/icon_key_3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ibtn_key_4"
                style="@style/style_public_1"
                android:background="@drawable/bg_key_selector"
                android:src="@mipmap/icon_key_4" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ibtn_key_5"
                style="@style/style_public_1"
                android:background="@drawable/bg_key_selector"
                android:src="@mipmap/icon_key_5" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ibtn_key_6"
                style="@style/style_public_1"
                android:background="@drawable/bg_key_selector"
                android:src="@mipmap/icon_key_6" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ibtn_key_7"
                style="@style/style_public_1"
                android:background="@drawable/bg_key_selector"
                android:src="@mipmap/icon_key_7" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ibtn_key_8"
                style="@style/style_public_1"
                android:background="@drawable/bg_key_selector"
                android:src="@mipmap/icon_key_8" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ibtn_key_9"
                style="@style/style_public_1"
                android:background="@drawable/bg_key_selector"
                android:src="@mipmap/icon_key_9" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ibtn_key_l"
                style="@style/style_public_1"
                android:background="@drawable/bg_key_selector"
                android:src="@mipmap/icon_key_l" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ibtn_key_0"
                style="@style/style_public_1"
                android:background="@drawable/bg_key_selector"
                android:src="@mipmap/icon_key_0" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ibtn_key_r"
                style="@style/style_public_1"
                android:background="@drawable/bg_key_selector"
                android:src="@mipmap/icon_key_r" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ibtn_key_del"
                style="@style/style_public_1"
                android:background="@drawable/bg_key_selector"
                android:src="@mipmap/icon_key_del" />
        </TableRow>
    </TableLayout>
    <ImageView
        android:id="@+id/seek_shade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#a0000000"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/seek_orderList"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/md_white_1000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible"
        android:layout_above="@+id/linearLayout3">
        <RelativeLayout
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="32dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已选商品"
                android:textColor="@color/md_white_1000"
                android:textSize="12dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/seek_textView5" />
            <ImageView
                android:layout_width="47dp"
                android:layout_height="16dp"
                android:background="@drawable/delet_select"
                android:id="@+id/seek_delet"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


        <ListView
            android:id="@+id/seek_order_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/grey_color1"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:id="@+id/linearLayout3">


        <TextView
            android:id="@+id/seek_total_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/md_white"
            android:layout_marginRight="@dimen/fab_margin"
            android:gravity="center"
            android:text="0.0元"

            />
        <TextView
            android:id="@+id/seek_ok_tv"
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:text="选好了"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/md_white"
            android:background="@color/colorPrimaryDark"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            >
        </TextView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/fab_margin"
        >

        <ImageView
            android:layout_width="50sp"
            android:layout_height="match_parent"
            android:background="@drawable/car_select"
            android:id="@+id/seek_car"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/seek_point"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:background="@drawable/redpoint"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/md_white_1000"
            android:textSize="12sp"
            android:visibility="invisible"
            android:layout_alignTop="@+id/seek_car"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>





</RelativeLayout>