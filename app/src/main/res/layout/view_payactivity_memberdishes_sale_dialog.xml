<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:background="@color/paycolor"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dishesname_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/md_white"
            android:text="菜名"
            />
        <TextView
            android:id="@+id/dishestotalprice_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/md_white"
            android:text="当前价格"
            />

        <TextView
            android:id="@+id/saleprice_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/md_white"
            android:text="折扣价格"
            />

        <TextView
            android:id="@+id/issale_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/md_white"
            android:text="折扣"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/memberdisheslist_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/md_grey_200"
        >
        <TextView
            android:id="@+id/balance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="余额：6000"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/saletotalprice_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/orange_color"
            android:gravity="center"
            android:padding="4dp"
            android:text="折扣价：￥600"
            android:textColor="@color/md_white"
            android:textSize="18sp" />


    </LinearLayout>

</LinearLayout>






