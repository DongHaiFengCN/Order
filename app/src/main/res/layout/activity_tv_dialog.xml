<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000"
    android:gravity="center"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/dialog_tuicai_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="请输入搜索内容"
            android:textSize="22sp"
            android:textColor="@color/md_white_1000"
            android:gravity="center"
            android:paddingLeft="20sp"
            />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="数量："
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/dialog_ed_sl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/animselect"
            android:layout_margin="5dp"
            android:inputType="number|numberDecimal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:selectAllOnFocus="true"
            />


    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改数量：填写新数量，点击【确定】"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退菜：填入要退的数量，点击【退菜】"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="赠菜：填入要赠的数量，点击【赠送】"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            />


    </LinearLayout>

    <View
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/dialog_tuicai"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="退菜"
            android:background="@color/title"
            android:textColor="@color/md_white_1000"
            android:textSize="18sp"
            android:layout_margin="5dp"/>

        <View
            android:layout_width="1sp"
            android:layout_height="match_parent"
            />

        <Button
            android:id="@+id/dialog_zc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="赠菜"
            android:background="@color/title"
            android:textColor="@color/md_white_1000"
            android:textSize="18sp"
            android:layout_margin="5dp"/>

        <View
            android:layout_width="1sp"
            android:layout_height="match_parent"
            />

        <Button
            android:id="@+id/dialog_tuicai_qx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="关闭"
            android:textColor="@color/md_black_1000"
            android:textSize="18sp"
            android:background="@color/divider"
            android:layout_margin="5dp"/>
        <View
            android:layout_width="1sp"
            android:layout_height="match_parent"
            />

        <Button
            android:id="@+id/dialog_tuicai_qd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定"
            android:background="@color/divider"
            android:textColor="@color/md_black_1000"
            android:textSize="18sp"
            android:layout_margin="5dp"/>


    </LinearLayout>

</LinearLayout>